
@model ProductCategoryApp.Models.Product

<h2>Product Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ProductId</dt>
        <dd class="col-sm-10">@Model.ProductId</dd>
        <dt class="col-sm-2">ProductName</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>
        <dt class="col-sm-2">CategoryId</dt>
        <dd class="col-sm-10">@Model.CategoryId</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
